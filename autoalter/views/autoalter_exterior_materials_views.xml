<odoo>
    <record id="autoalter_exterior_materials_view_tree" model="ir.ui.view">
        <field name="name">autoalter.exterior.materials.tree</field>
        <field name="model">autoalter.exterior.materials</field>
        <field name="arch" type="xml">
            <tree string="Exterior Materials">
                <field name="exterior_mat"/>
            </tree>
        </field>
    </record>
    <record id="autoalter_exterior_materials_view_form" model="ir.ui.view">
        <field name="name">autoalter.exterior.materials.form</field>
        <field name="model">autoalter.exterior.materials</field>
        <field name="arch" type="xml">
            <form string="Exterior Materials">
                <sheet>
                    <h1>
                        <group>
                            <field name="exterior_mat"/>
                        </group>
                    </h1>
                </sheet>
            </form>
        </field>
    </record>
</odoo>