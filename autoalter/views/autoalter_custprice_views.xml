<odoo>
    <record id="autoalter_custprice_view_tree" model="ir.ui.view">
        <field name="name">autoalter.custprice.tree</field>
        <field name="model">autoalter.custprice</field>
        <field name="arch" type="xml">
            <tree string="Custom Price">
                <field name="price"/>
            </tree>
        </field>
    </record>
    <record id="autoalter_custprice_view_form" model="ir.ui.view">
        <field name="name">autoalter.custprice.form</field>
        <field name="model">autoalter.custprice</field>
        <field name="arch" type="xml">
            <form string="Custom Price">
                <sheet>
                    <h1>
                        <group>
                            <field name="price"/>
                        </group>
                    </h1>
                </sheet>
            </form>
        </field>
    </record>
</odoo>