<odoo>
    <record id="autoalter_feature_view_tree" model="ir.ui.view">
        <field name="name">autoalter.feature.tree</field>
        <field name="model">autoalter.feature</field>
        <field name="arch" type="xml">
            <tree string="Features">
                <field name="feature_typ"/>
            </tree>
        </field>
    </record>
    <record id="autoalter_feature_view_form" model="ir.ui.view">
        <field name="name">autoalter.feature.form</field>
        <field name="model">autoalter.feature</field>
        <field name="arch" type="xml">
            <form string="Features">
                <sheet>
                    <h1>
                        <group>
                            <field name="feature_typ"/>
                        </group>
                    </h1>
                </sheet>
            </form>
        </field>
    </record>
</odoo>