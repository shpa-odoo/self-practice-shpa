<odoo>
    <record id="autoalter_customer_action" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">autoalter.customer</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="autoalter_customer_view_tree" model="ir.ui.view">
        <field name="name">autoalter.customer.tree</field>
        <field name="model">autoalter.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_name"/>
                <field name="user_email"/>
                <field name="user_no"/>
                <field name="user_gend"/>
                <field name="user_birth"/>
            </tree>
        </field>
    </record>
    <record id="autoalter_customer_view_form" model="ir.ui.view">
        <field name="name">autoalter.customer.form</field>
        <field name="model">autoalter.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="user_name"/>
                    <h1>
                        <field name="user_name" nolabel="1"/>

                    </h1>
                    <div style="position: absolute;right: 40px;top:15px">
                        <field name="user_image" widget="image" class="oe_right oe_avatar" nolabel="1"/>
                    </div>
                    <hr style="margin:3em 0"/>
                    <div>
                        <group>
                                <field name="user_email"/>
                                <field name="user_no"/>
                                <field name="user_gend" widget="radio"/>
                                <field name="user_birth"/>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="autoalter_customer_view_search" model="ir.ui.view">
        <field name="name">autoalter.customer.search</field>
        <field name="model">autoalter.customer</field>
        <field name="arch" type="xml">
            <search string="search..">
                <field name="user_name"/>
                <field name="user_birth"/>
                <group string="by user_name">
                    <filter string="By name" name="by user_name" context="{'group_by':'user_name'}"/>
                </group>
                <group string="by user_gend">
                    <filter string="By gender" name="by user_gend" context="{'group_by':'user_gend'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>