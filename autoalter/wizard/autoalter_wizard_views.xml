<odoo>
    
    <record id="autoalter_wizard_view_form" model="ir.ui.view">
        <field name="name">autoalter.wizard.form</field>
        
        <field name="model">autoalter.wizard</field>
        
        <field name="arch" type="xml">
            <form string="custom Offers">
                <sheet>
                    <group> 
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="status"/> 
                    </group>
                    <footer>
                        <button name="action_do_something" string="Add Offer" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>